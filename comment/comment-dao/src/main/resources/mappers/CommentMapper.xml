<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.performer.player.comment.dao.mapper.CommentMapper">

    <select id="getCommentList" resultType="com.performer.player.comment.pojo.Comment">
        SELECT * FROM comment
        <where>
    		<if test="theme_id !=null">theme_id=${theme_id}</if>
    		<if test="theme_type !=0">AND theme_type=${theme_type}</if>
    	</where>
    	ORDER BY comment_id
    </select>
    <insert id="insertComment" parameterType="com.performer.player.comment.pojo.Comment">
        INSERT INTO comment (id,comment_id,theme_id,theme_type,content,user_id,number_of_praise,reply_id,reply_user_id) values (#{id,jdbcType=INTEGER}, #{comment_id,jdbcType=INTEGER},#{theme_id,jdbcType=INTEGER},#{theme_type,jdbcType=VARCHAR},#{content,jdbcType=VARCHAR},#{user_id,jdbcType=INTEGER},#{number_of_praise,jdbcType=INTEGER},#{reply_id,jdbcType=INTEGER},#{reply_user_id,jdbcType=INTEGER})
    </insert>
    <select id="getMaxFloorNum" resultType="Integer">
    	SELECT max(comment_id) FROM comment
    	<where>
    		<if test="theme_id !=null">theme_id=${theme_id}</if>
    		<if test="theme_type !=0">AND theme_type=${theme_type}</if>
    	</where>
    </select>
</mapper>